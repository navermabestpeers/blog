  <% @article.avatars.each do |avatar| %>
    <%= image_tag(avatar) %>
  <% end %>
  <% @article.video_files.each do |video| %>
    <%= video_tag url_for(video), controls: true  %>
  <% end %>
<h1><%= @article.title %></h1>

<p><%= @article.description %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
    <p><%= link_to 'Go back to all article', articles_path %></p>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>



<h2>Add a comment:</h2>
<%= render 'comments/form', article: @article, comment: @comment %>
